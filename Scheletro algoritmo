def distanza_iperfocale(f,N,c):
  H=((f**2)/(N*c))+f

  return H
def lunghezza_focale(H,N,c):
  if N>0 and H>0 and c>0:
    f=math.sqrt(N*H*c)
    return f
  elif N==0 or H==0 or c==0:
    f=0
    return f
  else:
    print ('Errore nell\'input')
  return

def apertura_diaframma(H,f,c):
  N= (f*f)/(H*c)

  return N
  

def circolo_confusione (H,f,N):
  c = (f*f)/(H*N);

  return c

